<UserControl x:Class="Gibbed.Borderlands2.SaveEdit.BackpackView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:cal="http://www.caliburnproject.org"
             mc:Ignorable="d"
             d:DesignWidth="720"
             d:DesignHeight="480">
  <UserControl.Resources>
    <CollectionViewSource x:Key="SlotCollectionViewSource"
                          Source="{Binding Path=Slots}">
      <CollectionViewSource.GroupDescriptions>
        <PropertyGroupDescription PropertyName="DisplayGroup"></PropertyGroupDescription>
      </CollectionViewSource.GroupDescriptions>
    </CollectionViewSource>
  </UserControl.Resources>
  <DockPanel>
    <ToolBar Name="ButtonBar"
             DockPanel.Dock="Top">
      <Button x:Name="NewWeapon">
        <StackPanel Orientation="Horizontal">
          <Image Height="24"
                 Source="..\Resources\assaultrifle.png" />
          <Label Content="New Weapon" />
        </StackPanel>
      </Button>
      <Button x:Name="NewItem">
        <StackPanel Orientation="Horizontal">
          <Image Height="24"
                 Source="..\Resources\shield.png" />
          <Label Content="New Item" />
        </StackPanel>
      </Button>
      <Button x:Name="PasteCode">
        <StackPanel Orientation="Horizontal">
          <Image Height="24"
                 Source="..\Resources\fugue\scanner.png" />
          <Label Content="Paste Code" />
        </StackPanel>
      </Button>
    </ToolBar>
    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="0.35*" />
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="*" />
      </Grid.ColumnDefinitions>
      <ListView Grid.Column="0"
                ItemsSource="{Binding Source={StaticResource SlotCollectionViewSource}}"
                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                SelectedValue="{Binding Path=SelectedSlot}"
                SelectionMode="Single">
        <ListView.GroupStyle>
          <GroupStyle>
            <GroupStyle.HeaderTemplate>
              <DataTemplate>
                <TextBlock FontSize="15"
                           FontWeight="Bold"
                           Text="{Binding Path=Name}" />
              </DataTemplate>
            </GroupStyle.HeaderTemplate>
          </GroupStyle>
        </ListView.GroupStyle>
        <ListView.ItemTemplate>
          <DataTemplate>
            <StackPanel Orientation="Horizontal">
              <Image Width="24"
                     Height="24" />
              <TextBlock Text="{Binding Path=DisplayName}"
                         VerticalAlignment="Center" />
            </StackPanel>
          </DataTemplate>
        </ListView.ItemTemplate>
        <ListView.ContextMenu>
          <ContextMenu>
            <MenuItem>
              <MenuItem.Icon>
                <Image Source="..\Resources\fugue\printer.png"
                       Height="16" />
              </MenuItem.Icon>
              <MenuItem.Header>Copy Code</MenuItem.Header>
              <cal:Message.Attach>
                CopySelectedSlotCode()
              </cal:Message.Attach>
            </MenuItem>
            <Separator />
            <MenuItem>
              <MenuItem.Icon>
                <Image Source="..\Resources\fugue\document-copy.png"
                       Height="16" />
              </MenuItem.Icon>
              <MenuItem.Header>Duplicate</MenuItem.Header>
              <cal:Message.Attach>
                DuplicateSelectedSlot()
              </cal:Message.Attach>
            </MenuItem>
            <MenuItem>
              <MenuItem.Icon>
                <Image Source="..\Resources\bank.png"
                       Height="16" />
              </MenuItem.Icon>
              <MenuItem.Header>Bank</MenuItem.Header>
              <cal:Message.Attach>
                BankSelectedSlot()
              </cal:Message.Attach>
            </MenuItem>
            <Separator />
            <MenuItem>
              <MenuItem.Icon>
                <Image Source="..\Resources\fugue\document-delete.png"
                       Height="16" />
              </MenuItem.Icon>
              <MenuItem.Header>Delete</MenuItem.Header>
              <cal:Message.Attach>
                DeleteSelectedSlot()
              </cal:Message.Attach>
            </MenuItem>
          </ContextMenu>
        </ListView.ContextMenu>
      </ListView>
      <GridSplitter Grid.Column="1"
                    Width="4"
                    ResizeBehavior="PreviousAndNext" />
      <ScrollViewer Grid.Column="2"
                    HorizontalScrollBarVisibility="Disabled"
                    VerticalScrollBarVisibility="Auto">
        <ContentControl x:Name="SelectedSlot"></ContentControl>
      </ScrollViewer>
    </Grid>
  </DockPanel>
</UserControl>